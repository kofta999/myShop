doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{ docTitle }
    link(rel="stylesheet" href="/css/main.css")
    block styles

  body
    .backdrop
    header.main-header
      button#side-menu-toggle Menu
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__item
            a(class=(path === '/' ? 'active' : ''), href='/') Shop
          li.main-header__item
            a(class=(path === '/products' ? 'active' : ''), href='/products') Products
          if isAuthenticated
            li.main-header__item
              a(class=(path === '/cart' ? 'active' : ''), href='/cart') Cart
            li.main-header__item
              a(class=(path === '/orders' ? 'active' : ''), href='/orders') Orders
              li.main-header__item
                a(class=(path === '/admin/add-product' ? 'active' : ''), href='/admin/add-product') Add Product
              li.main-header__item
                a(class=(path === '/admin/products' ? 'active' : ''), href='/admin/products') Admin Products
      ul.main-header__item-list
        if !isAuthenticated
          li.main-header__item
            a(class=(path === '/login' ? 'active' : ''), href="/login") Login
          li.main-header__item
            a(class=(path === '/signup' ? 'active' : ''), href="/signup") SignUp
        else
          li.main-header__item
            form(action="/logout" method="post")
              input(type="hidden" name="_csrf" value=(csrfToken))
              button(type="submit") Logout
    nav.mobile-nav
      ul.mobile-nav__item-list
        li.mobile-nav__item
          a(class=(path === '/' ? 'active' : ''), href='/') Shop
        li.mobile-nav__item
          a(class=(path === '/products' ? 'active' : ''), href='/products') Products
        li.mobile-nav__item
          a(class=(path === '/cart' ? 'active' : ''), href='/cart') Cart
        li.mobile-nav__item
          a(class=(path === '/orders' ? 'active' : ''), href='/orders') Orders
        li.mobile-nav__item
          a(class=(path === '/admin/add-product' ? 'active' : ''), href='/admin/add-product') Add Product
        li.mobile-nav__item
          a(class=(path === '/admin/products' ? 'active' : ''), href='/admin/products') Admin Products
    block content
  script(src="/js/main.js")